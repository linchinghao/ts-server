{
  "name": "ts-server",
  "version": "1.0.0",
  "description": "Egg & Typescript nodejs server",
  "private": true,
  "egg": {
    "typescript": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-ts-server --sticky",
    "stop": "egg-scripts stop --title=egg-server-ts-server",
    "dev": "egg-bin dev -r egg-ts-helper/register --sticky",
    "debug": "egg-bin debug -r egg-ts-helper/register",
    "test-local": "egg-bin test -r egg-ts-helper/register",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov -r egg-ts-helper/register",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "tslint .",
    "clean": "ets clean"
  },
  "dependencies": {
    "egg": "^2.6.1",
    "egg-mongoose": "^2.2.0",
    "egg-passport": "^2.0.1",
    "egg-redis": "^2.0.0",
    "egg-scripts": "^2.6.0",
    "egg-socket.io": "^4.0.8",
    "egg-view-assets": "^1.1.2",
    "egg-view-nunjucks": "^2.2.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^7.0.12",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.6.2",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.4.2",
    "tslib": "^1.9.0",
    "tslint": "^4.0.0",
    "typescript": "^2.8.1"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "Allin",
  "license": "MIT"
}
